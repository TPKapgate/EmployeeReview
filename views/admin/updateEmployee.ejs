<!DOCTYPE html>
<html>
<head>
  <title>Update Employee</title>
</head>
<body>
  <h1>Update Employee</h1>
  <form action="/admin/update-employee/<%= employee._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= employee.name %>" required><br>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= employee.email %>" required><br>
    <label for="isAdmin">Is Admin:</label>
    <input type="checkbox" id="isAdmin" name="isAdmin" <%= employee.isAdmin ? 'checked' : '' %>><br>
    <button type="submit">Update Employee</button>
  </form>
</body>
</html>
